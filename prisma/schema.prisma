generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model VulnerabilityQuestion {
  id        String   @id @default(cuid())
  text      String
  hazard    String   // Hazard enum
  pillar    String   // Pillar enum
  isCritical Boolean @default(false)
  weight    Int      @default(1)
  responses AssessmentResponse[]
}

model ImpactStatement {
  id        String   @id @default(cuid())
  text      String
  hazard    String   // Hazard enum
  pillar    String   // Pillar enum
  responses ImpactResponse[]
}

model Assessment {
  id                     String               @id @default(cuid())
  userId                 String?              // Null for anonymous assessments
  facilityId             String?
  facilityName           String               @default("Unknown Facility")
  location               String               @default("Unknown Location")
  date                   DateTime             @default(now())
  isAnonymous            Boolean              @default(true)
  claimedAt              DateTime?            // When anonymous assessment was claimed
  vulnerabilityResponses AssessmentResponse[]
  impactResponses        ImpactResponse[]

  @@index([userId])
}

model AssessmentResponse {
  id           String                @id @default(cuid())
  assessment   Assessment            @relation(fields: [assessmentId], references: [id])
  assessmentId String
  question     VulnerabilityQuestion @relation(fields: [questionId], references: [id])
  questionId   String
  answer       String // "High", "Medium", "Low"
}

model ImpactResponse {
  id           String          @id @default(cuid())
  assessment   Assessment      @relation(fields: [assessmentId], references: [id])
  assessmentId String
  statement    ImpactStatement @relation(fields: [statementId], references: [id])
  statementId  String
  severity     String // "MAJOR", "MODERATE", "MINOR"
}
